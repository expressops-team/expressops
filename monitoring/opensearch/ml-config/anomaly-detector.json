{
  "name": "system_metrics_anomaly_detector",
  "description": "Detector for abnormal CPU and memory usage",
  "time_field": "timestamp",
  "indices": ["system-metrics"],
  "feature_attributes": [
    {
      "feature_name": "cpu_usage_average",
      "feature_enabled": true,
      "aggregation_query": {
        "cpu_usage_average": {
          "avg": {
            "field": "cpu_usage"
          }
        }
      }
    },
    {
      "feature_name": "memory_usage_average",
      "feature_enabled": true,
      "aggregation_query": {
        "memory_usage_average": {
          "avg": {
            "field": "memory_usage"
          }
        }
      }
    }
  ],
  "filter_query": {
    "match_all": {}
  },
  "detection_interval": {
    "period": {
      "interval": 1,
      "unit": "MINUTES"
    }
  },
  "window_delay": {
    "period": {
      "interval": 1,
      "unit": "MINUTES"
    }
  }
} 